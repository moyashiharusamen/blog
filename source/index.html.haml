---
pageable: true
per_page: 10
page_name: index
page: top
---

%main.main.cf
  %ul.cf
    - page_articles.each do |article, i|
      %li.top-article-list
        = link_to article, class: "article-thum" do
          = image_tag ("#{article.date.strftime('%Y')}/#{article.date.strftime('%m')}/#{article.data.eye}")
        .top-article-info
          %h2.top-article-title
            = link_to article.title, article
          .article-tags
            - article.tags.each do |tag, i|
              %div #{tag}
          .article-date
            = article.date.strftime('%Y-%m-%d')
  %nav.pagination{ role: "pagination" }
    - if paginate
      - if prev_page
        = link_to 'â† prev', prev_page, class: "prev-paginate"

    - if paginate && num_pages > 1
      %span.page-number
        = "#{page_number} / #{num_pages}"

    - if paginate
      - if next_page
        = link_to 'next â†’', next_page, class: "next-paginate"
